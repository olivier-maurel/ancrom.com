<header class="header-with-topbar">
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent border-bottom border-color-white-transparent header-dark navbar-boxed fixed-top header-reverse-scroll" style="top: 48px;">
        <div class="container-fluid nav-header-container">
            <div class="col-auto col-lg-12 menu-order px-lg-0">
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav h-font alt-font" style="display: inherit;">
                        <li class="nav-item">
                            <a href="#profil_section" class="nav-link">Profil</a>
                        </li>
                        <li class="nav-item">
                            <a href="#skills_section" class="nav-link">Skills</a>
                        </li>
                        <li class="nav-item">
                            <a href="#education_section" class="nav-link">Education</a>
                        </li>
                        <li class="nav-item">
                            <a href="#experience_section" class="nav-link">Experience</a>
                        </li>
                        <li class="nav-item">
                            <a href="#contact_section" class="nav-link">Contact</a>
                        </li>
                    </ul>
                </div>
                <div class="header-language dropdown">
                    <a href="javascript:void(0);"><i class="feather icon-feather-globe"></i></a>
                    <ul class="dropdown-menu alt-font">
                        {% for code in locales %}
                            {% if code != app.request.locale %}
                                <li>
                                    <a href="{{ path('change_locale', {'locale': code}) }}" title="{{ code }}">
                                        <span class="icon-country">
                                            <img src="{{ asset('img/lang/'~code~'.png') }}" alt="{{ code }}">
                                        </span>{{ code | upper}}
                                    </a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>